{
	"compilerOptions": {
		"target": "ESNext",
		"module": "nodenext",
		"moduleResolution": "nodenext",
		"moduleDetection": "force",
		"outDir": "./dist",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"paths": {
			"$shared/*": ["../shared/*"],
			"$server/*": ["./src/*"]
		}
	},
	"include": ["src/**/*.ts", "../shared/**/*.ts"],
	"exclude": ["node_modules", "src/**/*.test.ts"]
}
